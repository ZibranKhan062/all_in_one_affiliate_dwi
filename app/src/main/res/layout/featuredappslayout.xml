<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="50dp"
        android:padding="5dp"


        app:cardCornerRadius="5dp"
        app:rippleColor="@color/colorAccent">

        <RelativeLayout
            android:id="@+id/rel22"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/book_img"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_centerVertical="true"
                android:layout_margin="2dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/amazontemp"
                />

            <TextView
                android:id="@+id/book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:layout_toLeftOf="@+id/more"
                android:layout_toRightOf="@+id/book_img"
                android:fontFamily="@font/roboto"
                android:text="Pre-Diwali Offer upto 80% off on Homely Curtain towels and cushions! "
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book_title"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:theme="@style/RatingBar"
                android:layout_toRightOf="@+id/book_img"

                android:numStars="5"

                />


            <TextView
                android:id="@+id/book_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book_title"

                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/ratingBar"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_mono"
                android:maxLines="2"
                android:text="4.5 "
                android:textColor="@android:color/black"

                android:textStyle="bold" />

            <Button
                android:id="@+id/book_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book_description"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="15dp"

                android:layout_toStartOf="@+id/more"
                android:layout_toLeftOf="@+id/more"
                android:layout_toEndOf="@+id/book_img"
                android:layout_toRightOf="@+id/book_img"
                android:background="@drawable/roundedapps"
                android:fontFamily="@font/roboto"

                android:text="Install"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <!--            <Button-->
            <!--                android:id="@+id/buybtn"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_below="@+id/book_price"-->
            <!--                android:layout_toLeftOf="@+id/more"-->
            <!--                android:layout_toRightOf="@+id/book_img"-->
            <!--                android:backgroundTint="@android:color/holo_green_light"-->
            <!--                android:fontFamily="@font/opensansregular"-->
            <!--                android:text="Read Now" />-->

            <ImageView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>

